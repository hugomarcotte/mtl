<section class="navbar">
  <%= fa_icon 'bars 2x', class: 'js-menu-trigger sliding-panel-button' %>

  <nav class="js-menu sliding-panel-content">
    <ul>
      <li><%= link_to 'Home', root_path%></li>
      <li><%= link_to 'Admin', admin_path%></li>
    </ul>
  </nav>

  <div class="js-menu-screen sliding-panel-fade-screen"></div>

  <div class="user-widget">
    <% if current_user %>
        <%= image_tag current_user.image, class: 'fb-picture' %>
        <%= button_to 'Sign out', signout_path, id: 'sign_out', :method => 'get', :form_class => 'sign_in_out_form' %>
    <% else %>
        <%= button_to 'Sign in', '/auth/facebook', id: 'sign_in', :method => 'get', :form_class => 'sign_in_out_form' %>
    <% end %>
  </div>
</section>
